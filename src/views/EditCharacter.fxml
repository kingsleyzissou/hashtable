<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXTextArea?>
<?import com.jfoenix.controls.JFXTextField?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<?import com.jfoenix.controls.JFXComboBox?>
<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0"
            prefWidth="800.0" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controllers.EditCharacterController">
    <Label layoutX="28.0" layoutY="21.0" text="Edit Character">
        <font>
            <Font size="24.0"/>
        </font>
    </Label>
    <JFXTextField fx:id="name" labelFloat="true" layoutX="30.0" layoutY="100.0" prefHeight="27.0" prefWidth="350.0"
                  promptText="Character name"/>
    <JFXComboBox fx:id="gender" labelFloat="true" layoutX="410.0" layoutY="100.0" prefHeight="27.0" prefWidth="350.0"
                  promptText="Gender"/>
    <JFXTextField fx:id="age" labelFloat="true" layoutX="30.0" layoutY="180.0" prefHeight="27.0" prefWidth="350.0"
                  promptText="Character Age"/>
    <JFXTextField fx:id="creator" labelFloat="true" layoutX="410.0" layoutY="180.0" prefHeight="27.0" prefWidth="350.0"
                  promptText="Character Creator"/>
    <JFXTextArea fx:id="description" labelFloat="true" layoutX="30.0" layoutY="260.0" prefHeight="124.0"
                 prefWidth="730.0" promptText="Description"/>
    <JFXButton fx:id="back" layoutX="30.0" layoutY="511.0" onMouseClicked="#goBack"
               style="-fx-background-color: #d2d2d2;" text="Back"/>
    <JFXButton layoutX="720.0" layoutY="511.0" onMouseClicked="#updateCharacter" style="-fx-background-color: #00BBD6;"
               text="Save" textFill="WHITE"/>

</AnchorPane>
